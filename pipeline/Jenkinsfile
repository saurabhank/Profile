pipeline {
    agent any 
    tools {nodejs "node"}

    stages {
        stage('Example') {
            steps {

                sh 'npm config ls'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }  
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }      
        stage('Test') {
            steps {
                sh 'npm test'
            }
        } 
        stage('start server'){
            steps {
                sh 'npm start'
            }
        } 
    }
}